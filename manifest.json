{
  "manifest_version": 3,
  "name": "PDF Printer & pCloud Uploader",
  "version": "1.5",
  "permissions": [
    "debugger", 
    "activeTab", 
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api.pcloud.com/*",
    "https://cdn.jsdelivr.net/*"
  ]
}